{
  "name": "material",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint:js": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "lint:style": "stylelint **/*.{vue,css}",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"src/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md|vue)\"",
    "lint": "run-p lint:stage type-check spellcheck",
    "prepare": "husky install",
    "lint:stage": "lint-staged",
    "commit": "git-cz",
    "commitlint": "commitlint --edit"
  },
  "lint-staged": {
    "*.{html,vue,css,sass,scss,ts}": "prettier --write",
    "*.{vue,ts}": "eslint --fix",
    "*.{vue,css,sass,scss}": "stylelint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@glideapps/glide-data-grid": "5.2.1",
    "@icon-park/vue-next": "1.4.2",
    "@tiptap/core": "2.0.4",
    "@tiptap/pm": "2.0.4",
    "@tiptap/starter-kit": "2.0.4",
    "@tiptap/vue-3": "2.0.4",
    "@vue-flow/additional-components": "1.3.3",
    "@vue-flow/core": "1.21.2",
    "pinia": "^2.1.7",
    "react": "18.2.0",
    "smooth-dnd": "0.12.1",
    "veaury": "2.3.12",
    "vee-validate": "4.10.7",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@commitlint/cz-commitlint": "17.6.7",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.10",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "commitizen": "4.3.0",
    "cspell": "6.31.2",
    "cz-git": "1.7.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "8.0.3",
    "inquirer": "^8.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "13.2.3",
    "npm-run-all2": "^6.1.1",
    "postcss-html": "^1.0.0",
    "prettier": "^3.0.3",
    "stylelint": "15.10.2",
    "stylelint-config-html": "1.1.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-vue": "1.0.0",
    "tsno": "2.0.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.11",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27",
    "zx": "7.2.3"
  }
}
